[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
	pager = less -r
[branch]
	autosetupmerge = true
	autosetuprebase = always
[push]
	default = current
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	dfc = diff --cached
	lg = log -p
	lgs = log --stat
	lol = log --graph --pretty=format:'%C(red)%h %C(yellow)%ad %Cblue%an%Cgreen%d %Creset%s' --date=relative
	lola = log --graph --decorate --format=oneline --abbrev-commit --all
	ls = ls-files
	st = status
